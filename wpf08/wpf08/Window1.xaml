<Window x:Class="wpf08.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <Label Height="28" Margin="10,32,0,0" Name="label1" TabIndex="1"
               Target="{Binding ElementName=txtFirstName}"
               VerticalAlignment="Top">_First Name</Label>
        <Label Height="28" Margin="10,74,0,0" Name="label2" TabIndex="2"
               Target="{Binding ElementName=txtLastName}"
               VerticalAlignment="Top">_Last Name</Label>
        <Label Height="28" Margin="10,119,0,115" Name="label3" TabIndex="3"
               Target="{Binding ElementName=txtEmail}"
               VerticalAlignment="Top">_Email</Label>
        <Button Height="32" Margin="58,0,80,49" Name="button1" 
                TabIndex="4"
                VerticalAlignment="Bottom" Click="button1_Click">_Submit</Button>
        <TextBox Height="23" Margin="86,37,12,0" Name="txtFirstName" VerticalAlignment="Top" />
        <TextBox Height="25" Margin="84,77,12,0" Name="txtLastName" VerticalAlignment="Top" />
        <TextBox Margin="86,119,12,119" Name="txtEmail" />
    </Grid>
</Window>
